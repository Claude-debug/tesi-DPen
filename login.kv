            color: 0, 0, 0, 1  # Testo nero
            background_normal: ""
            background_down: ""
            canvas.before:
                Color:
                    rgba: 0.9, 0.9, 1, 1  # Sfondo leggermente pi√π chiaro
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [10]

        Label:
            id: error_label
            text: ""
            color: 1, 0, 0, 1
            size_hint_y: None
            height: 40

        Button:
            text: "Registrati"
            size_hint_y: None
            height: 50
            pos_hint: {"center_x": 0.5}
            background_normal: ''
            background_color: 0, 0, 0, 0
            color: 0.1, 0.1, 0.3, 1
            on_press: root.registra_utente()
            canvas.before:
                Color:
                    rgba: 1, 0.6, 0.2, 1  # Arancione morbido
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]

        Button:
            text: "Torna al Login"
            size_hint_y: None
            height: 50
            pos_hint: {"center_x": 0.5}
            background_normal: ''
            background_color: 0, 0, 0, 0
            color: 0.1, 0.1, 0.3, 1
            on_press: app.root.current = "login"
            canvas.before:
                Color:
                    rgba: 0.4, 0.8, 1, 1  # Azzurro sanitario
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [20]

