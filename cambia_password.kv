<CambiaPasswordScreen>:
    name: "cambia_password"

    BoxLayout:
        orientation: "vertical"
        spacing: 0
        padding: 0

        # HEADER
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: "100dp"
            padding: "10dp"
            spacing: "10dp"
            canvas.before:
                Color:
                    rgba: 0.05, 0.05, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Cambia Password"
                font_size: "22sp"
                bold: True
                color: 1, 1, 1, 1
                halign: "center"
                valign: "middle"
                text_size: self.size

        # CONTENUTO CENTRALE
        BoxLayout:
            orientation: "vertical"
            padding: "20dp"
            spacing: "10dp"
            size_hint_y: 1
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: "Seleziona un utente"
                font_size: "18sp"
                color: 0, 0, 0, 1
                size_hint_y: None
                height: "30dp"

            Spinner:
                id: spinner_utenti
                text: "Scegli un utente"
                values: []
                size_hint_y: None
                height: "40dp"
                background_color: 0.9, 0.9, 0.9, 1
                color: 0, 0, 0, 1
                on_text: root.seleziona_utente(self.text)

            Label:
                text: "Nuova Password"
                font_size: "18sp"
                color: 0, 0, 0, 1
                size_hint_y: None
                height: "30dp"

            TextInput:
                id: nuova_password
                password: True
                multiline: False
                size_hint_y: None
                height: "40dp"
                background_color: 1, 1, 1, 1
                foreground_color: 0, 0, 0, 1

        # BARRA INFERIORE
        BoxLayout:
            size_hint_y: None
            height: "50dp"
            padding: "10dp"
            spacing: "10dp"
            canvas.before:
                Color:
                    rgba: 0.05, 0.05, 0.2, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Button:
                text: "üîÑ Cambia Password"
                font_size: "18sp"
                background_normal: ''
                background_color: 0, 0, 0, 0
                color: 1, 1, 1, 1
                on_release: root.cambia_password()
                size_hint_x: 1
                canvas.before:
                    Color:
                        rgba: 1, 0.6, 0.2, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

            Button:
                text: "üè† Home"
                font_size: "18sp"
                background_normal: ''
                background_color: 0, 0, 0, 0
                color: 1, 1, 1, 1
                on_release: root.manager.current = "pagina_home"
                size_hint_x: 1
                canvas.before:
                    Color:
                        rgba: 0.2, 0.6, 0.8, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
